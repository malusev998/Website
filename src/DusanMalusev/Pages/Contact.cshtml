@page
@model DusanMalusev.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Page";
}

<div class="relative w-full h-full flex flex-grow justify-center pt-20">
    <div id="snow-effect" class="absolute top-0 left-0 w-full h-full z-0 flex justify-center items-center"></div>
    <section class="flex flex-col w-full h-full sm:w-9/12 sm:h-3/4 px-5 sm:px-0">

        @{
            var title = "Contact me";
        }
        <partial name="_Title" model="title"/>
        <div class="w-full h-full pt-20 mb-10">
            <h2 class="capitalize text-3xl mb-7">Get in touch</h2>
            <div class="flex flex-col lg:flex-row-reverse">
                <div class="w-full lg:w-1/2">
                    <div class="w-full h-36 bg-main-dark-700 p-4 mb-4 flex items-center">
                        <div class="border-4 border-gray-600 border-opacity-95 mr-5 w-20 h-20 flex">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="icon m-auto" width="48"
                                 height="48">
                                <g>
                                    <rect width="24" height="24" fill="none" opacity="0"/>
                                    <path d="M19 4H5a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h14a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3zm-.67 2L12 10.75 5.67 6zM19 18H5a1 1 0 0 1-1-1V7.25l7.4 5.55a1 1 0 0 0 .6.2 1 1 0 0 0 .6-.2L20 7.25V17a1 1 0 0 1-1 1z"/>
                                </g>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl">Emails</h3>
                            <ul class="mt-3">
                                <li>
                                    <a href="mailto:dusan@dusanmalusev.dev"
                                       class="text-gray-400 text-lg hover:text-blue-500 opacity-95 transition-all">
                                        dusan&#x40;dusanmalusev.dev
                                    </a>
                                </li>
                                <li>
                                    <a class="text-gray-400 text-lg hover:text-blue-500 opacity-95 transition-all"
                                       href="mailto:malusevd99@gmail.com">
                                        malusevd99&#x40;gmail.com
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="w-full lg:w-1/2 lg:mr-5">
                    <form method="post" id="contact-form" class="flex flex-col">
                        <div class="form-group w-full relative">
                            <p id="contact-form-name-error" class="error"></p>
                            <label for="contact-form-name" class="label">Name</label>
                            <input type="text" id="contact-form-name" class="input w-full" name="name"/>
                        </div>
                        <div class="form-group mt-6 w-full relative">
                            <p id="contact-form-email-error" class="error"></p>
                            <label for="contact-form-email" class="label">Email</label>
                            <input type="text" id="contact-form-email" class="input w-full" name="name"/>
                        </div>
                        <div class="form-group mt-6 w-full relative">
                            <p id="contact-form-subject-error" class="error"></p>
                            <label for="contact-form-subject" class="label">Subject</label>
                            <input type="text" id="contact-form-subject" class="input w-full" name="name"/>
                        </div>
                        <div class="form-group mt-6 w-full relative">
                            <p id="contact-form-message-error" class="error"></p>
                            <label for="contact-form-message" class="label">Message</label>
                            <textarea name="message" id="contact-form-message" class="input w-full" id="message" cols="30"
                                                           rows="8"></textarea>
                        </div>
                        <div class="form-group w-full mt-8 mb-8 sm:mb-0">
                            <input type="submit" class="w-full submit text-lg" value="contact me"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>